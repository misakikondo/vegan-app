<h3>いいね件数: <%= recipe.likes.count %></h3>
  
  <% if current_user.already_liked?(recipe) %>
    <%= button_to 'いいねを取り消す', destroy_like_path(recipe.id), method: :delete,remote: true %>
  <% else %>
    <%= button_to 'いいね', create_like_path(recipe.id), remote: true %>
  <% end %>


  <h2>いいねしたユーザー</h2>
  <% recipe.liked_users.each do |user|%>
    <li><%= user.nickname %></li>
  <% end %>